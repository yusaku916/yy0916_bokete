.header
  .header_logo
    BOKETE
  .username
    %span ニックネーム:
  %button{"data-modal": "delete-item", "data-open": "modal", class: "header_user_btn"}
    = link_to current_user.username, "URL", class: "header_user_name"
  %button{"data-modal": "delete-item", "data-open": "modal", class: "post_theme"}
    = link_to 'お題を投稿', posts_new_path, class: "post_theme_btn"
%main.main_boke_contant
%h1.post_all 投稿一覧
%ul
  - @posts.each do |posts|
    .boke_box
      .box_user_name
        投稿者: 
        = User.find(posts.user_id).username
      .box_theme
        お題: 
        = posts.theme
      .boke_image
        = image_tag posts.image
    .answer_box
      みんなの回答
      .answer-small-box
        .answer_user_name
          遠藤章造
        .answer-body
          .answer_text
            浜田
          %i.icon-balloon
      .answer-small-box
        .answer_user_name
          方正
        .answer-body
          .answer_text
            松本
          %i.icon-balloon
    .answer_create_btn
      = link_to 'このお題に答える', post_path(posts)
    .other_find
      = link_to 'もっと見る', post_path(posts)
.pagenate
  = paginate @posts
